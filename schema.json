{
    "name": "homelab",
    "displayName": "Homelab",
    "description": "Popular homelab applications for docker and kubernetes",
    "publisher": "UnstoppableMango",
    "keywords": [
        "category/cloud",
        "category/infrastructure",
        "kind/component",
        "pulumi",
        "kubernetes",
        "k8s",
        "docker",
        "homelab"
    ],
    "repository": "https://github.com/unmango/pulumi-homelab",
    "pluginDownloadURL": "",
    "types": {
        "homelab:index:kubernetes:imageArgs": {
            "type": "object",
            "properties": {
                "registry": {
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        }
    },
    "resources": {
        "homelab:index:StaticPage": {
            "isComponent": true,
            "inputProperties": {
                "indexContent": {
                    "type": "string",
                    "description": "The HTML content for index.html."
                }
            },
            "requiredInputs": [
                "indexContent"
            ],
            "properties": {
                "bucket": {
                    "$ref": "/aws/v4.0.0/schema.json#/resources/aws:s3%2Fbucket:Bucket",
                    "description": "The bucket resource."
                },
                "websiteUrl": {
                    "type": "string",
                    "description": "The website URL."
                }
            },
            "required": [
                "bucket",
                "websiteUrl"
            ]
        },
        "homelab:index:kubernetes:linuxserver:radarr": {
            "isComponent": true,
            "inputProperties": {
                "name": {
                    "type": "string",
                    "description": "Optional name override."
                },
                "namespace": {
                    "type": "string",
                    "description": "Namespace to provision resources in."
                },
                "image": {
                    "type": "object",
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "$ref": "#/types/homelab:index:kubernetes:imageArgs"
                        }
                    ]
                }
            }
        }
    },
    "language": {
        "csharp": {
            "packageReferences": {
                "Pulumi": "3.*",
                "Pulumi.Aws": "4.*",
                "Pulumi.Docker": "3.*",
                "Pulumi.Kubernetes": "3.*"
            }
        },
        "go": {
            "generateResourceContainerTypes": true,
            "importBasePath": "github.com/unmango/pulumi-homelab/sdk/go/homelab"
        },
        "nodejs": {
            "packageName": "@unmango/pulumi-homelab",
            "dependencies": {
                "@pulumi/aws": "^4.0.0",
                "@pulumi/docker": "^3.1.0",
                "@pulumi/kubernetes": "^3.12.1"
            },
            "devDependencies": {
                "typescript": "^4.5.4"
            }
        },
        "python": {
            "requires": {
                "pulumi": ">=3.0.0,<4.0.0",
                "pulumi-aws": ">=4.0.0,<5.0.0",
                "pulumi-docker": ">=3.0.0,<4.0.0",
                "pulumi-kubernetes": ">=3.0.0,<4.0.0"
            }
        }
    }
}
